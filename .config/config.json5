{
  "keybindings": {
    "Viewer": {
        // Universal Keybindings
        "<q>": "Quit", // Quit the application
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application
        
        // Action Keybindings
        "<j>": "FocusInput",
        "<i>": "ActivateViewer",
      },
    "ActiveViewer": {
        // Universal Keybindings
        "<q>": "Quit", // Quit the application
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application

        // Action Keybindings
        "<k>": "SelectPreviousMessage",
        "<j>": "SelectNextMessage",
        "<d>": "DeleteSelectedMessage",
        "<ESC>": "DeactivateViewer",


      },
    "Input": {
        // Universal Keybindings
        "<q>": "Quit", // Quit the application
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application
        
        // Action Keybindings
        "<k>": "FocusViewer",
        "<i>": "ActivateInput",
      },
    "ActiveInput": {
        // Universal Keybindings
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application

        // Action Keybindings
        "<ESC>": "DeactivateInput",
      }
  }
}
