{
  "keybindings": {
    "ActiveViewer": {
        // Universal Keybindings
        "<q>": "Quit", // Quit the application
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application

        // Action Keybindings
        "<k>": "SelectPreviousMessage",
        "<j>": "SelectNextMessage",
        "<d>": "DeleteSelectedMessage",
        "<c>": "CopySelectedMessage",
        "<ESC>": "SwitchMode(Input)",

      },
    "Input": {
        // Universal Keybindings
        "<q>": "Quit", // Quit the application
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application
        
        // Action Keybindings
        "<v>": "SwitchMode(ActiveViewer)",
        "<j>": "ScrollDown",
        "<k>": "ScrollUp",
        "<i>": "SwitchMode(ActiveInput)",
        "<m>": "SwitchMode(ModelSelector)",
        "<c>": "SwitchMode(ConversationManager)",
      },
    "ActiveInput": {
        // Universal Keybindings
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application

        // Action Keybindings
        "<ESC>": "SwitchMode(Input)",
      },
    "ModelSelector": {
        // Universal Keybindings
        "<q>": "Quit", // Quit the application
        "<Ctrl-d>": "Quit", // Another way to quit
        "<Ctrl-c>": "Quit", // Yet another way to quit
        "<Ctrl-z>": "Suspend", // Suspend the application
        
        // Action Keybindings
        "<m>": "RevertMode",
        "<j>": "SelectNextModel",
        "<k>": "SelectPreviousModel",
        "<enter>": "SwitchToSelectedModel",
      },
    "ConversationManager": {
        // Universal Keybindings
        "<q>": "Quit",
        "<Ctrl-d>": "Quit",
        "<Ctrl-c>": "Quit",
        "<Ctrl-z>": "Suspend",

        "<ESC>": "RevertMode",
        "<c>": "RevertMode",
        "<j>": "SelectNextConversation",
        "<k>": "SelectPreviousConversation",
        "<n>": "NewConversation",
        "<d>": "DeleteSelectedConversation",
        "<enter>": "LoadSelectedConversation",
      }
  }
  
}
